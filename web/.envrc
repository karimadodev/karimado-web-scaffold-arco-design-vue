# vim: set filetype=sh:
# shellcheck disable=SC2155

# Docker: Enabling BuildKit features.
export DOCKER_BUILDKIT=1

# Docker Compose: Sets the project name. This value is prepended along with the
# service name to the container's name on startup.
export COMPOSE_PROJECT_NAME=$(basename "${PWD%/*}")

# Docker Compose: Specifies one or more profiles to be enabled on compose up
# execution. Services with matching profiles are started as well as any services
# for which no profile has been defined.
export COMPOSE_PROFILES="*"
