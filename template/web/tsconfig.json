{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
    "lib": ["ES2020", "DOM"],
    "skipLibCheck": true,
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["node_modules"],
}
